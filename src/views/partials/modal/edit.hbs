<div class="modal fade" id="edit_restaurant_{{this._id}}" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Edit Restaurant Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/view/restaurants/edit" method="post">
                <div class="modal-body">
                    <table>
                        <tr>
                            <td>
                                <b>Name:</b>
                            </td>
                            <td>
                                <input type="text" name="name" value="{{this.name}}" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Restaurant Id:</b>
                            </td>
                            <td>
                                <input type="text" name="restaurant_id" value="{{this.restaurant_id}}" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Building:</b>
                            </td>
                            <td>
                                <input type="text" name="building" value="{{this.address.building}}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Street:</b>
                            </td>
                            <td>
                                <input type="text" name="street" value="{{this.address.street}}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>City:</b>
                            </td>
                            <td>
                                <input type="text" name="borough" value="{{this.borough}}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Zip Code:</b>
                            </td>
                            <td>
                                <input type="text" name="zipcode" value="{{this.address.zipcode}}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Coordinates:</b>
                            </td>
                            <td>
                                <input type="text" name="coord" value="{{this.address.coord}}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Cuisine:</b>
                            </td>
                            <td>
                                <input type="text" name="cuisine" value="{{this.cuisine}}" required/>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="hidden" name="_id" value="{{this._id}}">
                    <input type="hidden" id="token" name="token" value="">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
